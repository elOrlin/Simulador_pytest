[flake8]
max-line-length = 100
exclude =
    migrations,
    __pycache__,
    manage.py,
    settings.py,
    venv,
    .venv,
    .git,
    .github
ignore =
    E501,  # líneas largas (ya controladas por max-line-length)
    W503,  # saltos de línea en operadores
    F403,  # imports con *
